<div class="container">


   <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> All Categoriess</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date Uploaded</th>
                    <th>Action</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date Uploaded</th>
                    <th>Action</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each categories}}
                    <tr>

                        <td>{{title}}</td>
                        <td>{{user.firstName}} {{user.lastName}}</td>
                        <td>{{dateCreated}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/categories/edit/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                            <form action="/admin/categories/delete/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
              
            </table>
          </div>
        </div>
        
      </div>

    


    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="category-title" name="title" value="{{category.title}}">
                    <input type="hidden" class="form-control" id="category-id" name="id" value="{{category.id}}">
                </div>
                    <button class="btn btn-outline-warning btn-lg" id="edit-category-button">Edit Category</button>
        </div>
    </div>


</div>