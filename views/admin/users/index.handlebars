<div class="container">


    

    <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> All Users</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                    <th>Role</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                    <th>Role</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
              </tfoot>
              <tbody>
            {{#each users}}
                    <tr>

                       <td>{{role}}</td>
                       <td>{{firstName}} {{lastName}}</td> 
                        <td>{{email}}</td>
                        <td>{{dateCreated}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/users/edit/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                            <form action="/admin/users/delete/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
        </tbody>
              </tbody>
            </table>
          </div>
        </div>
        
      </div>


    

    <hr>



</div>