<div class="container">
    

    <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> All Posts</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Comments Enabled</th>
                <th>Category</th>
                <th>Actions</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Comments Enabled</th>
                <th>Category</th>
                <th>Actions</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{category.title}}</td>
                <td class="d-flex">
                    <a href="posts/edit/{{_id}}" class="btn btn-sm btn-warning">Edit</a>
                    <form action="posts/delete/{{_id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
              
            </table>
          </div>
        </div>
        
      </div>

    
</div>