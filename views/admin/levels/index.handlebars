<div class="container">


    <h3 class="text-center">All Levels</h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="bg-dark table table-bordered">
                <thead>
                <tr class="text-white">
                    <th>Title</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody class="bg-white text-center text-black">
                {{#each levels}}
                    <tr>

                        <td>{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/levels/edit/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                            <form action="/admin/levels/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="level-title" name="title" placeholder="Enter Title">
                </div>
                <button class="btn btn-outline-success btn-lg" id="create-level-button">Create Level</button>
                <p>Refresh to see new level. There is a bug that I don't have time to fix.</p>
        </div>
    </div>


</div>